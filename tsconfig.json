{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "build",
    "baseUrl": ".",
    "strict": true,                                 
    "noUnusedLocals": false,
    "noUnusedParameters": false,                  
    "esModuleInterop": true,                        
    "experimentalDecorators": true,              
    "skipLibCheck": true,                          
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "@types",
      "./node_modules/@types",
    ]     
  },
  "lib": ["es6"],
  "include": ["src"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
}